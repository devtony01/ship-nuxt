{
  "name": "api",
  "version": "1.0.0",
  "description": "Express.js API with Drizzle ORM",
  "author": "devtony01",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/app.ts",
    "eslint": "eslint . --fix",
    "prettier": "prettier . --write --config .prettierrc.json",
    "precommit": "lint-staged",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "dotenv": "16.5.0",
    "drizzle-orm": "^0.36.4",
    "express": "^4.19.2",
    "lodash": "4.17.21",
    "module-alias": "2.2.3",
    "mysql2": "^3.11.4",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ship-nuxt/eslint-config": "workspace:*",
    "@ship-nuxt/prettier-config": "workspace:*",
    "@ship-nuxt/tsconfig": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/lodash": "4.17.17",
    "@types/module-alias": "2.0.4",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.28.1",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "ts-node": "10.9.2",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "bash -c 'tsc --noEmit'",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
