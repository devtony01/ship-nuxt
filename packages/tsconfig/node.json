{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": true,
    "types": ["node"],
    "noEmit": false,
    "outDir": "dist"
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": false
  }
}