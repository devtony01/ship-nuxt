{
  "name": "@ship-nuxt/schemas",
  "version": "1.0.0",
  "description": "Shared validation schemas for Ship Nuxt application",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "tsc": "tsc --noEmit --watch",
    "prettier": "prettier . --write --config .prettierrc.json",
    "eslint": "eslint . --fix",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@ship-nuxt/app-constants": "workspace:*",
    "@ship-nuxt/entities": "workspace:*",
    "@ship-nuxt/enums": "workspace:*",
    "drizzle-zod": "^0.5.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ship-nuxt/eslint-config": "workspace:*",
    "@ship-nuxt/prettier-config": "workspace:*",
    "@ship-nuxt/tsconfig": "workspace:*",
    "@types/formidable": "2.0.5",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "bash -c 'tsc --noEmit'",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}